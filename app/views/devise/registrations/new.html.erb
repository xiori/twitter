<div class="section">
  <div class="container">
    <div class="columns is-centered ">
      <div class="column is-4" style="margin-right: 20px;">

        <h2 class="title is-2">Inscription</h2>
         
        <p>Suivez vos passions. </p>
        <p>DÃ©couvrez ce dont les gens parlent. </p>

          <%= render "devise/shared/links" %>
      </div>

      <div class="box">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="field">
            <div class="control">
              <%= f.input :name,
                          required: true,
                          autofocus: true ,
                          wrapper: false,
                          input_html: { class: "input", autocomplete: "email" },
                          label_html: {class: "label"}
                          %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :username,
                          required: true,
                          wrapper: false,
                          input_html: { class: "input", autocomplete: "email" },
                          label_html: {class: "label"}
                          %>
            </div>
          </div>

        <div class="field">
            <div class="control">
              <%= f.input :email,
                          required: true,
                          wrapper: false,
                          input_html: { class: "input", autocomplete: "email" },
                          label_html: {class: "label"}
                          %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.input :password,
                          required: true,
                          input_html: { class: "input", autocomplete: "new-password" },
                          wrapper: false,
                          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          label_html: { class: "label", autocomplete: "new-password" } %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.input :password_confirmation,
                          required: true,
                          input_html: { class: "input" },
                          wrapper: false,
                          label_html: {class: "label"} %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.button :submit, "Inscription", class: 'button is-info is-medium' %>
            </div>
          </div>
      <% end %>
      <br/>
      </div>
    </div>
  </div>
</div>
