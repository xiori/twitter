<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">
      <h2 class="title is-2">Changer votre mot de passe</h2>

      
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>
        
          <div class="field">
            <div class="control">
          <%= f.input :password,        
                required: true,              
                input_html: { class: "input is-rounded",autocomplete: "new-password" },
                label_html: { class: "label" },
                label: "Votre nouveau mot de passe",
                wrapper: false %>
            </div>
          </div>
          </br>
          <%= f.full_error :reset_password_token %>
          <div class="field">
            <div class="control">
              <%= f.input :password_confirmation,
                    wrapper: false,
                    required: true,
                    input_html: { class: "input is-rounded", autocomplete: "confirm-password" },
                    label_html: { class: "label" },
                    label: "Confirmez votre nouveau mot de passe" %>
            </div>
          </div>
          </br>
      <div class="field">
        <div class="control">
          <%= f.button :submit, "Changer mon mot de passe", class: 'button is-info is-rounded'%>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>