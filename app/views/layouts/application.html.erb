<!DOCTYPE html>
<html>

<head>
  <title>TwitterFork</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>
$(document).ready(function(){

    $("#hidden").hide(2000);
});
</script>

<body>
  <div id=hidden>
      <% if flash[:notice] %>
      <div class="notification is-primary global-notification">
        <p class="notice"> 
          <%= notice %>
        </p>
      </div>
      <% end %>
      <% if flash[:alert] %>
      <div class="notification is-danger global-notification">
        <p class="alert">
          <%= alert %>
        </p>
      </div>
      <% end %>
  </div>

  <nav class="navbar is-info">
    <div class="navbar-brand">
      <%= link_to root_path, class: "navbar-item" do %>
      <h1 class="title is-5">Twitter</h1>
      <% end %>
      <div class="navbar-burger burger" data-target="navbarExample">
        <span></span>
        <span></span>
        <span></span>
      </div>
    </div>

    <div id="navbarExample" class="navbar-menu">
      <div class="navbar-end">
        <div class="navbar-item">
          <div class="field is-grouped">

            <% if user_signed_in? %>
              <p class="control"><%= link_to 'Nouveau tweet', root_path, class: "button is-info is-inverted " %></p>
              <p class="control"><%= link_to 'Se dÃ©connecter ', destroy_user_session_path, method: :delete, class: 'button is-danger is-inverted' %></p>
              <p class="control"><%= link_to "Editer #{current_user.name}", edit_user_registration_path, class: 'button is-success is-inverted' %></p>
            <% else %>
              <p class="control"><%= link_to 'Se connecter', new_user_session_path, class: 'button is-link'  %></p>
              <p class="control"><%= link_to "S'inscrire", new_user_registration_path, class: "button is-success"  %></p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </nav>

  <%= yield %>
</body>

</html>